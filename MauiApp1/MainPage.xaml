<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">

    <ContentPage.Resources>
        <Style x:Key="BaseCalculatorButtonStyle"
               TargetType="Button">
            <Setter Property="WidthRequest"
                    Value="80" />
            <Setter Property="HeightRequest"
                    Value="80" />
            <Setter Property="CornerRadius"
                    Value="40" />
            <Setter Property="TextColor"
                    Value="{AppThemeBinding Light=Black, Dark=White}" />
            <Setter Property="FontSize"
                    Value="32" />
            <Setter Property="FontAttributes"
                    Value="Bold" />
        </Style>

        <Style x:Key="OperatorButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource BaseCalculatorButtonStyle}">
            <Setter Property="BackgroundColor"
                    Value="{AppThemeBinding Light={StaticResource CustomBlue},
                                            Dark={StaticResource CustomDarkBlue}}" />
        </Style>

        <Style x:Key="DefaultButtonStyle"
           TargetType="Button"
           BasedOn="{StaticResource BaseCalculatorButtonStyle}">
            <Setter Property="BackgroundColor"
                    Value="{AppThemeBinding Light={StaticResource CustomLightGreen},
                                            Dark={StaticResource CustomDarkGreen}}" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="200,*">
        <Border StrokeShape="RoundRectangle 0 0 25 25"
                Stroke="Transparent"
                BackgroundColor="{AppThemeBinding Light={StaticResource CustomLightBlue}, 
                                                  Dark={StaticResource CustomDarkGray}}">
            <VerticalStackLayout>
                <Entry Text="9 x 3"
                       HorizontalTextAlignment="End"
                       FontSize="75"/>
                <Label Text="27"
                       HorizontalTextAlignment="End"
                       FontSize="50" />
            </VerticalStackLayout>
        </Border>

        <Grid Grid.Row="1"
              RowDefinitions="*,*,*,*"
              ColumnDefinitions="*,*,*,*">

            <Button Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="AC" />

            <Button Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="(   )" />

            <Button Grid.Row="0"
                    Grid.Column="2"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="%" />

            <Button Grid.Row="0"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="+" />
        </Grid>

        <Grid Grid.Row="2"
              RowDefinitions="*,*,*,*"
              ColumnDefinitions="*,*,*,*">

            <Button Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource DefaultButtonStyle}"
                    Text="7" />

            <Button Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource DefaultButtonStyle}"
                    Text="8" />

            <Button Grid.Row="1"
                    Grid.Column="2"
                    Style="{StaticResource DefaultButtonStyle}"
                    Text="9" />

            <Button Grid.Row="1"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="x" />
        </Grid>

        <Grid Grid.Row="3"
              RowDefinitions="*,*,*,*"
              ColumnDefinitions="*,*,*,*">

            <Button Grid.Row="2"
                    Grid.Column="0"
                    Style="{StaticResource DefaultButtonStyle}"
                    Text="4" />

            <Button Grid.Row="2"
                    Grid.Column="1"
                    Style="{StaticResource DefaultButtonStyle}"
                    Text="5" />

            <Button Grid.Row="2"
                    Grid.Column="2"
                    Style="{StaticResource DefaultButtonStyle}"
                    Text="6" />

            <Button Grid.Row="2"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="-" />
        </Grid>

        <Grid Grid.Row="4"
              RowDefinitions="*,*,*,*"
              ColumnDefinitions="*,*,*,*">

            <Button Grid.Row="3"
                    Grid.Column="0"
                    Style="{StaticResource DefaultButtonStyle}"
                    Text="1" />

            <Button Grid.Row="3"
                    Grid.Column="1"
                    Style="{StaticResource DefaultButtonStyle}"
                    Text="2" />

            <Button Grid.Row="3"
                    Grid.Column="2"
                    Style="{StaticResource DefaultButtonStyle}"
                    Text="3" />

            <Button Grid.Row="3"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="+" />
        </Grid>

        <Grid Grid.Row="5"
              RowDefinitions="*,*,*,*"
              ColumnDefinitions="*,*,*,*">

            <Button Grid.Row="4"
                    Grid.Column="0"
                    Style="{StaticResource DefaultButtonStyle}"
                    Text="0" />

            <Button Grid.Row="4"
                    Grid.Column="1"
                    Style="{StaticResource DefaultButtonStyle}"
                    Text="." />

            <Button Grid.Row="4"
                    Grid.Column="2"
                    Style="{StaticResource DefaultButtonStyle}"
                    Text="DE" />

            <Button Grid.Row="4"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="=" />
        </Grid>

    </Grid>


</ContentPage>
